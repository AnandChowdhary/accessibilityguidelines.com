{
  "name": "accessibilityguidelines.com",
  "version": "0.1",
  "description": "Accessibility guidelines",
  "main": "dist/index.js",
  "repository": "git@github.com:AnandChowdhary/accessibilityguidelines.com",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "build": "yarn compile && yarn build-site",
    "build-site": "node dist/build.js",
    "watch": "onchange '*.{html,scss,ts,json,md}' -- yarn build-site",
    "watch-prettier": "onchange '*.{html,scss,ts,json}' -- prettier --write {{changed}}",
    "watch-compile": "onchange 'build.ts' -- yarn compile",
    "serve": "live-server dist --quiet",
    "start": "concurrently 'yarn watch' 'yarn watch-prettier' 'yarn watch-compile' 'yarn serve'"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/html-minifier": "^3.5.3",
    "@types/marked": "^0.6.5",
    "@types/node": "^12.6.3",
    "@types/sass": "^1.16.0",
    "concurrently": "^4.1.1",
    "fs-extra": "^8.1.0",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.1",
    "marked": "^0.7.0",
    "onchange": "^6.0.0",
    "prettier": "^1.18.2",
    "sass": "^1.22.5",
    "typescript": "^3.5.3"
  }
}
