{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["es7"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "build.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
